<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/material_vertical_list_padding">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvInfoRowTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/itemVerticalTitleColor"
            android:textSize="@dimen/material_vertical_list_title_font_size"
            tools:text="Name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvInfoRowDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/itemVerticalSubTitleColor"
            android:textSize="@dimen/material_vertical_list_subtitle_font_size"
            tools:text="Rick Sanchez" />

    </LinearLayout>
</layout>